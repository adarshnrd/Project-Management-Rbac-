{
  "name": "projectmanagement",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --build ./tsconfig.json && resolve-tspaths --project ./tsconfig.json --out ./lib && cp -rv ./views ./lib",
    "prebuild": "rm -rf ./lib",
    "prestart": "npm run migrate:run",
    "shell": "ts-node -P ./tsconfig.json",
    "start": "npm run build && NODE_ENV=production NODE_OPTIONS='--max-old-space-size=2000' node --max-old-space-size=2000 ./lib/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --watch ./src -e ts --exec \"npm run start:dev\"",
    "start:dev": "ts-node -P ./tsconfig.json  src/index",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "migrate:create": "ts-node -P ./tsconfig.json  ./node_modules/.bin/typeorm migration:create migration/PostRefactoring",
    "migrate:generate": "ts-node -P ./tsconfig.json  ./node_modules/.bin/typeorm migration:generate migration/Refactor -d ormconfig.js",
    "migrate:revert": "DEBUG=typeorm:*  ts-node -P ./tsconfig.json  ./node_modules/.bin/typeorm migration:revert -d ormconfig.js",
    "migrate:run": "DEBUG=typeorm:* NODE_OPTIONS='--max-old-space-size=2000' ts-node -P ./tsconfig.json  ./node_modules/.bin/typeorm migration:run -d ormconfig.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mindpath/logger": "^0.0.3",
    "axios": "^1.7.9",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "hbs": "^4.2.0",
    "joi": "^17.13.3",
    "mysql2": "^3.11.4",
    "node-cache": "^5.1.2",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.15.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}