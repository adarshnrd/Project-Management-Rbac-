<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <style>
        /* Reusing CSS design */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            display: flex;
            justify-content: center;
            padding: 20px;
        }

        .edit-container {
            width: 100%;
            max-width: 800px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px;
        }

        .header {
            display: flex;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
        }

        .avatar {
            width: 60px;
            height: 60px;
            background-color: #ccc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: bold;
            margin-right: 20px;
        }

        .header h1 {
            font-size: 24px;
            margin: 0;
        }

        .form-section {
            margin: 20px 0;
        }

        .form-section h2 {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        .form-group {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }

        .form-group .input-field {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            outline: none;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #007bff;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .form-actions button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-actions .save-btn {
            background-color: #6c63ff;
            color: white;
        }

        .form-actions .save-btn:hover {
            background-color: #4b47d9;
        }

        .form-actions .cancel-btn {
            background-color: #ddd;
        }

        .form-actions .cancel-btn:hover {
            background-color: #bbb;
        }
    </style>
</head>

<body>
    <div class="edit-container">
        <div class="header">
            <div class="avatar">
                <span>{{user.firstName.charAt 0}}</span>
            </div>
            <h1>Edit Profile</h1>
        </div>
        <form action="/updateProfile" method="POST">
            <!-- Work Information -->
            <div class="form-section">
                <h2>Work Information</h2>
                <div class="form-group">
                    <div class="input-field">
                        <label for="firstName">First Name</label>
                        <input type="text" id="firstName" name="firstName" value="{{user.firstName}}" required>
                    </div>
                    <div class="input-field">
                        <label for="middleName">Middle Name</label>
                        <input type="text" id="middleName" name="middleName" placeholder="Enter your middle name">
                    </div>
                    <div class="input-field">
                        <label for="lastName">Last Name</label>
                        <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-field">
                        <label for="workNumber">Work Number</label>
                        <input type="text" id="workNumber" name="workNumber" placeholder="Enter your work number">
                    </div>
                    <div class="input-field">
                        <label for="mobileNumber">Mobile Number</label>
                        <input type="text" id="mobileNumber" name="mobileNumber" placeholder="Enter your mobile number">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-field">
                        <label for="companyName">Company Name</label>
                        <input type="text" id="companyName" name="companyName" value="{{user.companyName}}">
                    </div>
                    <div class="input-field">
                        <label for="jobTitle">Job Title</label>
                        <input type="text" id="jobTitle" name="jobTitle" placeholder="Enter your job title">
                    </div>
                </div>
            </div>

            <!-- Other Information -->
            <div class="form-section">
                <h2>Other Information</h2>
                <div class="form-group">
                    <div class="input-field">
                        <label for="language">Language</label>
                        <select id="language" name="language">
                            <option value="English" {{#ifEquals user.language "English" }}selected{{/ifEquals}}>English
                            </option>
                            <option value="French" {{#ifEquals user.language "French" }}selected{{/ifEquals}}>French
                            </option>
                            <option value="Spanish" {{#ifEquals user.language "Spanish" }}selected{{/ifEquals}}>Spanish
                            </option>
                        </select>
                    </div>
                    <div class="input-field">
                        <label for="timeZone">Time Zone</label>
                        <select id="timeZone" name="timeZone">
                            <option value="GMT+05:30" {{#ifEquals user.timeZone "GMT+05:30" }}selected{{/ifEquals}}>
                                GMT+05:30 Chennai</option>
                            <option value="GMT+01:00" {{#ifEquals user.timeZone "GMT+01:00" }}selected{{/ifEquals}}>
                                GMT+01:00 London</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-field">
                        <label for="facebook">Facebook URL</label>
                        <input type="url" id="facebook" name="facebook" value="{{user.facebook}}">
                    </div>
                    <div class="input-field">
                        <label for="linkedin">LinkedIn URL</label>
                        <input type="url" id="linkedin" name="linkedin" value="{{user.linkedin}}">
                    </div>
                    <div class="input-field">
                        <label for="twitter">Twitter URL</label>
                        <input type="url" id="twitter" name="twitter" value="{{user.twitter}}">
                    </div>
                </div>
            </div>

            <!-- Save and Cancel Buttons -->
            <div class="form-actions">
                <button type="submit" class="save-btn">Save</button>
                <button type="button" class="cancel-btn" onclick="window.location.href='/profile';">Cancel</button>
            </div>
        </form>
    </div>
</body>

</html>