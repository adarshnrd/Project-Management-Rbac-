<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 450px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: bold;
        }

        input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 3px;
            width: 95%;
        }

        .button {
            padding: 10px;
            background-color: #6c63ff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

        .button:hover {
            background-color: #574bdb;
        }

        .button:disabled {
            background-color: #d3d3d3;
            color: #a1a1a1;
            cursor: not-allowed;
        }

        .info {
            font-size: 14px;
            color: gray;
            text-align: center;
            margin-top: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        /* Add space between buttons */
        #resend-button {
            margin-top: 20px;
            /* Adjust the value to increase or decrease the space */
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>OTP Verification</h1>

        <form action="/verify-otp" method="POST">
            <div class="form-group">
                <input type="text" id="otp" name="otp" placeholder="Enter OTP" required>
                {{#if wrongOtpAttempted}}
                <p>You have entered the wrong OTP {{wrongOtpAttempted}}. Please try again.</p>
                {{/if}}
                {{#if otpInNodeCacheNotFound}}
                <p style="color: #cc0000;">Something went wrong. Please try again using the new OTP sent to your email
                    address.</p>
                {{/if}}
            </div>
            <input type="hidden" name="email" value="{{userEmail}}">
            <button type="submit" class="button">Verify OTP</button>
        </form>

        <button id="resend-button" class="button" disabled title="Please try again after 10sec.">Resend
            OTP</button>

        <p class="info">If you haven't received the email, please check your spam or junk folder as well.</p>
    </div>

    <script>
        // Enable the Resend OTP button after 10 seconds initially
        const resendButton = document.getElementById('resend-button');
        const formGroup = document.querySelector('.form-group'); // Target the area to display success message

        setTimeout(() => {
            resendButton.disabled = false;
            resendButton.title = "Click to resend OTP.";
        }, 10000);

        // Add event listener to Resend OTP button
        resendButton.addEventListener('click', () => {
            if (!resendButton.disabled) {
                resendButton.disabled = true; // Disable button immediately
                resendButton.title = "Please try again after 10 seconds.";

                // Send the POST request to resend the OTP
                fetch('/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        path: "{{path}}",
                        email: "{{{userEmail}}}"
                    })
                })
                    .then(response => {
                        if (response.ok) {
                            // Show success message dynamically
                            const successMessage = document.createElement('p');
                            successMessage.style.color = '#28a745'; // Apply professional green color
                            successMessage.textContent = "The OTP has been resent to your email. Please check your inbox and verify it";
                            formGroup.appendChild(successMessage);
                            // Remove the message after a while
                            setTimeout(() => {
                                if (successMessage.parentNode) {
                                    successMessage.parentNode.removeChild(successMessage);
                                }
                            }, 5000); // Remove after 5 seconds
                        } else {
                            alert('Failed to resend OTP. Please try again later.');
                        }

                        // Re-enable the button after 10 seconds
                        setTimeout(() => {
                            resendButton.disabled = false;
                            resendButton.title = "Click to resend OTP.";
                        }, 10000);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred. Please try again later.');

                        // Re-enable the button after 10 seconds even if there's an error
                        setTimeout(() => {
                            resendButton.disabled = false;
                            resendButton.title = "Click to resend OTP.";
                        }, 10000);
                    });
            }
        });
    </script>
</body>

</html>