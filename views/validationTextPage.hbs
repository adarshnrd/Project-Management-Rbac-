<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 450px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: bold;
        }

        input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 3px;
            width: 95%;
        }

        .button {
            padding: 10px;
            background-color: #6c63ff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

        .button:hover {
            background-color: #574bdb;
        }

        .button:disabled {
            background-color: #d3d3d3;
            color: #a1a1a1;
            cursor: not-allowed;
        }

        .info {
            font-size: 14px;
            color: gray;
            text-align: center;
            margin-top: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        /* Add space between buttons */
        #resend-button {
            margin-top: 20px;
            /* Adjust the value to increase or decrease the space */
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>OTP Verification</h1>

        <form action="/verify-otp" method="POST">
            <div class="form-group">
                <input type="text" id="otp" name="otp" placeholder="Enter OTP" required>
            </div>
            <input type="hidden" name="email" value="{{userEmail}}">
            <button type="submit" class="button">Verify OTP</button>
        </form>

        <button id="resend-button" class="button" disabled title="Please try again after 30sec.">Resend
            OTP</button>

        <p class="info">If you haven't received the email, please check your spam or junk folder as well.</p>
    </div>

    <script>
        // Enable the Resend OTP button after 1 minute
        const resendButton = document.getElementById('resend-button');
        setTimeout(() => {
            resendButton.disabled = false;
        }, 5000);

        // Add event listener to Resend OTP button
        resendButton.addEventListener('click', () => {
            if (!resendButton.disabled) {
                fetch('/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ action: 'resend_otp' })
                })
                    .then(response => {
                        if (response.ok) {
                            alert('OTP has been resent successfully.');
                        } else {
                            alert('Failed to resend OTP. Please try again later.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred. Please try again later.');
                    });
            }
        });
    </script>
</body>

</html>